#include<iostream>
#include<map>
using namespace std;
int main(){
    int arr[] = {1, 2, 3, 2, 1, 4, 2};
    int n = sizeof(arr)/sizeof(arr[0]);
    map<int,int> m1;
    
    for(int i=0;i<n;i++){
        m1[arr[i]]++;
    }
    for(auto it:m1){
        cout<<it.first<<" appears "<<it.second<< "times"<<endl;
    }
    return 0;
}
